<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="product_price" type="Appstractsoftware\MagentoAdapter\Api\Data\ProductPriceInterface"/>
        <attribute code="units" type="Appstractsoftware\MagentoAdapter\Api\Data\ProductUnitsInterface"/>
    </extension_attributes>
    <extension_attributes for="Magento\Quote\Api\Data\CartItemInterface">
        <attribute code="links" type="Appstractsoftware\MagentoAdapter\Api\Data\CartItemLinksInterface"/>
        <attribute code="quantity" type="Appstractsoftware\MagentoAdapter\Api\Data\CartItemQuantityInterface"/>
        <attribute code="thumbnail" type="Appstractsoftware\MagentoAdapter\Api\Data\ProductImagesInterface"/>
        <attribute code="product_options" type="Appstractsoftware\MagentoAdapter\Api\Data\ProductSimpleOptionInterface[]"/>
        <attribute code="informations" type="Appstractsoftware\MagentoAdapter\Api\Data\CartItemInformationInterface"/>
    </extension_attributes>
</config>
