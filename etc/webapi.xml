<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/wishlist" method="POST">
        <service class="Appstractsoftware\MagentoAdapter\Api\WishlistManagementInterface" method="addProductToWishlistForCustomer"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customer.id" force="true">%customer_id%</parameter>
            <parameter name="product.id" force="true">%product_id%</parameter>
        </data>
    </route>
    <route url="/V1/wishlist/me" method="POST">
        <service class="Appstractsoftware\MagentoAdapter\Api\WishlistManagementInterface" method="addProductToWishlistForCustomer"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="product.id" force="true">%product_id%</parameter>
        </data>
    </route>

    <route url="/V1/wishlist/:id" method="GET">
        <service class="Appstractsoftware\MagentoAdapter\Api\WishlistRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="Appstractsoftware_MagentoAdapter::admin"/>
        </resources>
    </route>
    <route url="/V1/wishlist/customer/:customerId" method="GET">
        <service class="Appstractsoftware\MagentoAdapter\Api\WishlistManagementInterface" method="getWishlistByCustomerId"/>
        <resources>
            <resource ref="Appstractsoftware_MagentoAdapter::admin"/>
        </resources>
    </route>
    <route url="/V1/wishlist/share/:sharingCode" method="GET">
        <service class="Appstractsoftware\MagentoAdapter\Api\WishlistRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Appstractsoftware_MagentoAdapter::admin"/>
        </resources>
    </route>
    <route url="/V1/wishlist/:id" method="DELETE">
        <service class="Appstractsoftware\MagentoAdapter\Api\WishlistRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Appstractsoftware_MagentoAdapter::admin"/>
        </resources>
    </route>
</routes>